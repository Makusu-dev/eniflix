{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Catalogue{% endblock %}
{% block body %}
    <h2>Catalogue</h2>
    <section>
        <div class="buttonContainer">
        {% if page > 1 %}
            <a href="{{ path('serie_list', {'page' : page -1 }) }}">Page précédente</a>&nbsp;
        {% endif %}
        {% if page < totalPages %}
            <a href="{{ path('serie_list', {'page' : page +1 }) }}">Page Suivante</a>
        {% endif %}
        </div>
    </section><br>
    <section class="series-list">
        {% for serie in series %}
            <a href="{{ path('serie_detail', { id : serie.id }) }}">
                <img src="{{ asset('uploads/posters/series/' ~ serie.poster) }}" width="250px" alt="{{ 'Poster de ' ~ serie.name }}" loading="lazy">
                {% for season in serie.seasons %}
                    {{ season.number }} |
                {%  endfor %}
            </a>
        {% else %}
            <p>Pas de série</p>
        {% endfor %}
    </section>
{% endblock %}
