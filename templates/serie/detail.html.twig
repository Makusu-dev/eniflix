{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} -Catalogue{% endblock %}

{% block body %}
    <style>
        body {
            background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.9)),
            url("{{ asset('uploads/backdrops/'~serie.backdrop)}}");
        }
    </style>
    <body>
   <h2>Serie: {{ serie.name }}</h2>
   <p>{{ serie.genres }}</p>
   <p>{{ serie.overview }}</p>

   <div>
       {%  for season in serie.seasons %}
           <a>Season {{ season.number }} </a><br>
       {%  endfor %}<br>
   </div>
    {%  if  is_granted('ROLE_ADMIN')%}
        <a href="{{  path('serie_update',{'id':serie.id}) }}">Mettre à jour la série</a>
        <a href="{{ path('serie_delete', { id : serie.id, token : csrf_token('delete'~serie.id)}) }}"
           class="btn btn-danger"
           onclick="return confirm('Etes vous sûr ??')">Supprimer cette série</a>
    {%  endif %}


    </body>
{% endblock %}
