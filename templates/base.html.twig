<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}EniFlix{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/icon.png') }}">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <img src="{{ asset('images/logo.png') }}" alt="logo du site, le mot Série dans une jolie typographie" />
    <nav>
        <ul>
            <li><a href="{{ path('home') }}">Home</a></li>
            {%  if is_granted('IS_AUTHENTICATED') %}
            <li><a href="{{path('serie_list')}}">Catalogue</a></li>
            {%  endif %}
            {%  if is_granted('ROLE_ADMIN') %}
            <li><a href="{{path('serie_create')}}">Ajouter une série</a></li>
            {% endif %}
            {%  if is_granted('ROLE_MODERATOR') %}
            <li><a href="{{path('season_create')}}">Ajouter une saison</a></li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED')%}
            <li><a href="{{path('app_logout')}}">Se déconnecter</a></li>
            {%  else %}
                    <li><a href="{{path('app_login')}}">Se connecter</a></li>
            {% endif %}
        </ul>
    </nav>
    {%  for type, messages in app.flashes %}
        {%  for message in messages %}
            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {%  endfor %}
    {%  endfor %}
    {% block body %}{% endblock %}
</html>
